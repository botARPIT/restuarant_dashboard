# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_NAME=restaurant_dashboard_prod
DB_USER=restaurant_user
DB_PASSWORD=your-secure-db-password
DB_MAX_CONNECTIONS=50
DB_MIN_CONNECTIONS=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_CREATE_TIMEOUT=5000
DB_DESTROY_TIMEOUT=10000
DB_REAP_INTERVAL=1000
DB_CREATE_RETRY_INTERVAL=200

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_WINDOW_MS=900000
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_MAX_DELAY_MS=2000

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here
CORS_ORIGIN=https://your-frontend-domain.com

# Platform API Keys
# Zomato Integration
ZOMATO_API_KEY=your-zomato-api-key-here
ZOMATO_API_SECRET=your-zomato-api-secret-here
ZOMATO_WEBHOOK_SECRET=your-zomato-webhook-secret-here

# Swiggy Integration
SWIGGY_API_KEY=your-swiggy-api-key-here
SWIGGY_API_SECRET=your-swiggy-api-secret-here
SWIGGY_WEBHOOK_SECRET=your-swiggy-webhook-secret-here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/restaurant-dashboard/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache Configuration
REDIS_URL=redis://your-redis-host:6379
CACHE_TTL=3600

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/var/uploads/restaurant-dashboard

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# External Services
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-new-relic-key-here